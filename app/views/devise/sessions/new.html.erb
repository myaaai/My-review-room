<div class="row" id="main_background">
  <div class="container">
    <div class="row">
      <div class="mx-auto col-12 col-sm-10 col-lg-8 col-xl-6">


    <h3 class="font-weight-bold mb-4 mt-5">Log in</h3>

    <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="field">
        <%= f.label :email, class: "font-weight-bold mr-3" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "font-weight-bold mr-3" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

      <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-outline-success mt-3 mb-5' %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
