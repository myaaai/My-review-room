
<div class="container">
 <div class="row">
 

<div class="col-md-8 offset-md-1">


    <h3 class="font-weight-bold">Roommate</h3>
    <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>

      <tr>
        <td> <%= image_tag user.get_profile_image("50x50") %>
            <% if user.id == current_user.id %>
            <% end %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show",user_path(user.id) %></td>

      </tr>
    <% end %>
  </tbody>
 </table>
 </div>
 </div>
</div>