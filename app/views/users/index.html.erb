<div class="row" id="main_background">
<div class="container">
  <div class="row">
   <div class="col-4 border rounded border-info h-50 mt-5 mb-5" id="color">
  <%= render 'post_images/list', post_image: @post_image, user: @user %>
  </div>

   <div class="col-8">
    <h3 class="font-weight-bold ml-5 mt-5"><i class="fas fa-users text-info"></i> Roommate list</h3>
    <table class="table table-hover table-inverse ml-5">
      <thead>
       <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="1"></th>
       </tr>
      </thead>

      <tbody>

        <% @mates.each do |user| %>

        <tr>
          <td><%= link_to user_path(user.id) do%>
           <%= image_tag user.get_profile_image("50x50") %>
           <% end %>
                <% if user.id == current_user.id %>
                <% end %></td>
          <td>
           <%= link_to user.name, user_path(user.id) %></td>

        </tr>
            <% end %>
      </tbody>
    </table>

    <h3 class="font-weight-bold ml-5"><i class="fas fa-users text-warning"></i> User list</h3>
      <table class="table table-hover table-inverse ml-5">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="1"></th>
          </tr>
        </thead>

      <tbody>
        <%@users.each do |user| %>
        <% unless current_user.id == user.id %>

          <tr>
            <td><%= image_tag user.get_profile_image("50x50") %>
                <% if user.id == current_user.id %>
                <% end %></td>
            <td><%= link_to user.name, user_path(user.id) %></td>
              <% if user.follow_request?(current_user, user) %>
                    <p><i class="fas fa-star"></i></p>
                  <% end %>

          </tr>
        <% end %>
        <% end %>
      </tbody>
      </table>
     </div>
   </div>
</div>