
<div class="container px-5 px-sm-0">
 <div class="row">
   <div class="col-4">
  <%= render 'post_images/list', post_image: @post_image, user: @user %>
  </div>

   <div class="col-8">
    <h3 class="font-weight-bold ml-5">Roommate list</h3>
    <table class="table table-hover table-inverse ml-5">
      <thead>
       <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="1"></th>
       </tr>
      </thead>

      <tbody>

        <% @mates.each do |user| %>

        <tr>
          <td>
           <%= link_to user.name, user_path(user.id) %></td>
          <td>
           <%= user.identity %></td>
        </tr>
            <% end %>
      </tbody>
    </table>

    <h3 class="font-weight-bold ml-5">User list</h3>
      <table class="table table-hover table-inverse ml-5">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="1"></th>
          </tr>
        </thead>

      <tbody>
        <%@users.each do |user| %>
        <% unless current_user.id == user.id %>

          <tr>
            <td><%= image_tag user.get_profile_image("50x50") %>
                <% if user.id == current_user.id %>
                <% end %></td>
            <td><%= link_to user.name, user_path(user.id) %></td>
              <% if user.follow_request?(current_user, user) %>
                    <p><i class="fas fa-star"></i></p>
                  <% end %>
            <td><%= link_to "Show",user_path(user.id) %></td>

          </tr>
        <% end %>
        <% end %>
      </tbody>
      </table>
     </div>
   </div>
</div>