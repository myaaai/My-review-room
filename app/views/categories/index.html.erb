<div class="row" id="main_background">
  <div class="container">
    <div class="row">
      <div class="col-4 mr-5 border rounded border-info h-50 mb-5 mt-5" id="color">
        <%= render 'post_images/list', post_image: @post_image, user: @user %>
      </div>

    <div class="col-7 mt-5">

					<h3 class="font-weight-bold mr-3 mb-1">Category</h3>
							<%= form_with model: @category,url: categories_path, local: true do |f| %>

 						<%= f.text_field :name, class: 'mb-3 mr-5 ml-3' %>
						<%= f.submit 'Add', class: 'ml-3 mb-3 btn btn-outline-success' %>

						<% end %>



<table class="table table-border mt-1">
	<thead>
		<tr>
			<th>ALL</th>

		</tr>
	</thead>
	<tbody>
		<% current_user.categories.each do |category| %>
			<tr>
				<td><%= category.name %></td>

				<td>
					<%= link_to edit_category_path(category.id), class: 'btn btn-outline-secondary' do %>
						Edit
				</td>
					<% end %>

				<td>
					<%= link_to "Show all", category_path(category.id), class: 'btn btn-secondary' %>
				</td>
			</tr>
		<% end %>
	</tbody>


 </table>
 </div>
 </div>
</div>
</div>
 </div>
