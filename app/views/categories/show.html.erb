<div class="row" id="main_background">
<div class="container">
  <div class="row">
   <div class="col-4 border rounded border-info h-50 mb-5 mt-5" id="color">
  <%= render 'post_images/list', post_image: @post_image, user: @user %>
  </div>

<div class="col-8">
  <h3 class="font-weight-bold mr-5 mb-5 ml-5 mt-5">Category:  <%= @category.name %></h3>
    <div class="row">
     <% @post_images.each do |post_image| %>
         <div class="post_group mr-5 mb-5 ml-5">
            <%= link_to post_image_path(post_image.id) do %>
              <div><%= image_tag post_image.image.present? ? post_image.image : "",class: "list_image" %></div>
            <% end %>
          <p>Title:<%= post_image.title %></p>
          <p>Memo:<%=post_image.memo %></p>
          <p>Categoryï¼š<%= post_image.category.name %></p>
            <div id="star"></div>
              <div id="star-rate<%= post_image.id%>"></div>
            <script>
            $('#star-rate<%= post_image.id%>').raty({
            size      : 36,
            starOff   : '<%= asset_path('star-off.png') %>',
            starOn    : '<%= asset_path('star-on.png') %>',
            half      : false,
            readOnly: true,
            <%# if post_image.review.blank? %>
            //score: 0
            <%# else %>
            //score: <%#= post_image.review %>
            <%# end %>
            score: <%= post_image.review.blank? ? 0 : post_image.review %>
            });
            </script>
         </div>
    <% end %>
    </div>
  </div>

<div class="back center">
<%= link_to "Back", categories_path(@category), class: 'btn btn-secondary mt-5 mb-5' %>
</div>
</div>






</div>